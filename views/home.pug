           li #[a(href="/about") About Us]
a.logo(href='/home')
  img(src='../public/lg.png' alt='Logo')
h1 Welcome to Siemens Mobility Industries
h2 Siemens Vendor Directory
.search
  form#searchForm
    input#searchInput(type='text' placeholder='Search Categories...')
    input(type='submit' value='Search')

.dropdown
  button.dropdown-button &vellip;
    .dropdown-content
       each category in uniqueCategories
          a(href=`/contact?category=${category}`, target='_blank')= category
          hr

#bookshelf.bookshelf
  // Sample book items
  each category in uniqueCategories
        .book
          h3= category 
          a.pdf-button(href=`/contact?category=${category}`, target='_blank') Category
  
script.
  document.getElementById('searchForm').addEventListener('submit', function (e) {
  e.preventDefault(); // Prevent form submission
  var searchInput = document.getElementById('searchInput').value.toLowerCase();
  var books = document.querySelectorAll('.book');
  books.forEach(function (book) {
  var title = book.querySelector('h3').textContent.toLowerCase();
  if (title.includes(searchInput)) {
  book.style.display = 'block';
  } else {
  book.style.display = 'none';
  }
  });
  });
